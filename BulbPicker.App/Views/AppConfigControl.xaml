<UserControl x:Class="BulbPicker.App.Views.AppConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             xmlns:vm="clr-namespace:BulbPicker.App.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="470" d:DesignWidth="600">
    <UserControl.DataContext>
        <vm:AppConfigViewModel/>
    </UserControl.DataContext>
    
    <Border Style="{StaticResource CardStyle}" >
        <StackPanel>
            <TextBlock Text="Application Configuration" Style="{StaticResource CardTitleStyle}"/>
            <Border Style="{StaticResource CardSeparatorStyle}"/>

            <StackPanel Margin="10 0">
                <TextBlock Text="SCARA Position Offsets" Style="{StaticResource MainTitleStyle}" />

                <ItemsControl ItemsSource="{Binding RobotArms}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0 10">
                                <TextBlock Text="SCARA 1"
                                           FontSize="21"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource LightGray}"/>

                                <!-- X -->
                                <StackPanel Orientation="Horizontal"
                                            Margin="10">
                                    <TextBlock Text="X"
                                               FontSize="22"
                                               Foreground="{StaticResource LightGray}"
                                               FontWeight="SemiBold"
                                               Margin="0 0 20 0"/>
                                    <TextBox Width="100"
                                             VerticalContentAlignment="Center"
                                             Foreground="White"
                                             FontSize="16"
                                             Background="{StaticResource CardLightGray}"
                                             BorderThickness="0"
                                             Padding="8 5"/>
                                </StackPanel>

                                <!-- Y -->
                                <StackPanel Orientation="Horizontal"
                                            Margin="10">
                                    <TextBlock Text="Y"
                                               FontSize="22"
                                               Foreground="{StaticResource LightGray}"
                                               FontWeight="SemiBold"
                                               Margin="0 0 20 0"/>
                                    <TextBox Width="100"
                                             VerticalContentAlignment="Center"
                                             Foreground="White"
                                             FontSize="16"
                                             Background="{StaticResource CardLightGray}"
                                             BorderThickness="0"
                                             Padding="8 5"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
