<UserControl x:Class="BulbPicker.App.Views.LogsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             xmlns:vm="clr-namespace:BulbPicker.App.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="470" d:DesignWidth="600">
    <UserControl.DataContext>
        <vm:LogsViewModel />
    </UserControl.DataContext>
    
    <Border Style="{StaticResource CardStyle}" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <Grid>
                    <TextBlock Text="Logs"
                       Style="{StaticResource CardTitleStyle}"/>
                    <Button Background="Transparent"
                            BorderThickness="0"
                            Width="35"
                            Height="35"
                            HorizontalAlignment="Right"
                            Command="{Binding DownloadLogsCommand}">
                        <Image Source="pack://application:,,,/Assets/Images/download-button.png" />
                    </Button>
                </Grid>
                <Border Style="{StaticResource CardSeparatorStyle}"/>

                <StackPanel Orientation="Horizontal">
                    <Button Background="Green"
                            Content="Con."
                            Command="{Binding AddLog_Connected}" />
                    <Button Background="Red"
                            Content="Discon."
                            Command="{Binding AddLog_Disconnected}" />
                    <Button Background="Yellow"
                            Content="RAPointSent"
                            Command="{Binding AddLog_RobotArmPointSent}" />
                    <Button Background="Cyan"
                            Content="RACommun."
                            Command="{Binding AddLog_RobotArmCommunication}" />
                    <Button Background="Purple"
                            Content="SFUpdated"
                            Command="{Binding AddLog_SettingFileUpdated}" />
                    <Button Background="Pink"
                            Content="ImageCombined"
                            Command="{Binding AddLog_ImageCombined}" />

                </StackPanel>
            </StackPanel>

            <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible"
                     Grid.Row="1"
                     BorderThickness="0"
                     Background="Transparent"
                     Foreground="White"
                     ItemsSource="{Binding Logs}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding LoggedAt, StringFormat='[ {0:yyyy/MM/dd HH:mm:ss} ]'}"
                                       Margin="0 0 10 0"
                                       FontWeight="SemiBold"
                                       FontSize="12"
                                       MaxWidth="140"/>
                            <TextBlock Text="{Binding Message}"
                                       FontSize="14"
                                       Width="380"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Border>
</UserControl>
