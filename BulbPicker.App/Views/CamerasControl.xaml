<UserControl x:Class="BulbPicker.App.Views.CamerasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="600">

    <Border Style="{StaticResource CardStyle}">
        <StackPanel>
            <TextBlock Text="Cameras" Style="{StaticResource CardTitleStyle}"/>
            <Border Style="{StaticResource CardSeparatorStyle}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3px" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--1st Camera-->
                <StackPanel Grid.Column="0">
                    <DockPanel Style="{StaticResource CameraTitlePanelStyle}">
                        <TextBlock Text="Camera 1"
                                   Style="{StaticResource CameraTitleStyle}"/>
                        <Button Style="{StaticResource CameraConnectButtonStyle}" />
                    </DockPanel>

                    <!--TODO: stylize (2 imgs)-->
                    <Border Background="Black">
                        <Image Name="CameraImage11"
                               Stretch="Uniform"
                               Margin="10"
                               Height="250" />
                    </Border>


                    <Border Height="3px"/>

                    <Border Background="Black">
                        <Image Name="CameraImage12"
                               Stretch="Uniform"
                               Margin="10"
                               Height="250" />
                    </Border>
                </StackPanel>

                <!--2nd Camera-->
                <StackPanel Grid.Column="2">
                    <DockPanel Style="{StaticResource CameraTitlePanelStyle}">
                        <TextBlock Text="Camera 2"
                                   Style="{StaticResource CameraTitleStyle}"/>
                        <Button Style="{StaticResource CameraConnectButtonStyle}" />
                    </DockPanel>

                    <!--TODO: stylize (2 imgs)-->
                    <Border Background="Black">
                        <Image Name="CameraImage21"
                               Stretch="Uniform"
                               Margin="10"
                               Height="250" />
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
