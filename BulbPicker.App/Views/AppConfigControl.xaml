<UserControl x:Class="BulbPicker.App.Views.AppConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             xmlns:vm="clr-namespace:BulbPicker.App.ViewModels"
             xmlns:ser="clr-namespace:BulbPicker.App.Services"
             mc:Ignorable="d" 
             d:DesignHeight="470" d:DesignWidth="600">
    <UserControl.DataContext>
        <vm:AppConfigViewModel/>
    </UserControl.DataContext>
    
    <Border Style="{StaticResource CardStyle}" >
        <StackPanel>
            <Grid>
                <TextBlock Text="Application Configuration" Style="{StaticResource CardTitleStyle}"/>
                <Button Width="30"
                        Background="Transparent"
                        BorderThickness="0"
                        HorizontalAlignment="right"
                        Command="{Binding SaveOffsetsCommand}">
                    <Image Source="pack://application:,,,/Assets/Images/save-button.png" />
                </Button>
                
            </Grid>
            <Border Style="{StaticResource CardSeparatorStyle}"/>

            <StackPanel Margin="10 0">
                <TextBlock Text="Robot Arm Position Offsets"
                           Style="{StaticResource MainTitleStyle}" />

                <ItemsControl ItemsSource="{Binding Source={x:Static ser:ConfigService.Instance},
                    Path=DisplayedOffsets}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0 10">
                                <TextBlock Text="{Binding IP, StringFormat='IP_{0}'}"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource LightGray}"/>
                                <!-- X Offset -->
                                <StackPanel Orientation="Horizontal"
                                            Margin="10 5">
                                    <TextBlock Text="X"
                                               FontSize="20"
                                               Foreground="{StaticResource LightGray}"
                                               FontWeight="SemiBold"
                                               Margin="0 0 20 0"/>
                                    <TextBox Width="80"
                                             Text="{Binding X, Mode=TwoWay, UpdateSourceTrigger=Default}"
                                             VerticalContentAlignment="Center"
                                             Foreground="White"
                                             FontSize="16"
                                             Background="{StaticResource CardLightGray}"
                                             BorderThickness="0"
                                             Padding="5 2"/>
                                </StackPanel>

                                <!-- Y Offset -->
                                <StackPanel Orientation="Horizontal"
                                            Margin="10 5">
                                    <TextBlock Text="Y"
                                               FontSize="20"
                                               Foreground="{StaticResource LightGray}"
                                               FontWeight="SemiBold"
                                               Margin="0 0 20 0"/>
                                    <TextBox Width="80"
                                             Text="{Binding Y, Mode=TwoWay}"
                                             VerticalContentAlignment="Center"
                                             Foreground="White"
                                             FontSize="16"
                                             Background="{StaticResource CardLightGray}"
                                             BorderThickness="0"
                                             Padding="5 2"/>
                                </StackPanel>
                                
                                <!-- Z Offset -->
                                <StackPanel Orientation="Horizontal"
                                            Margin="10 5">
                                    <TextBlock Text="Z"
                                               FontSize="20"
                                               Foreground="{StaticResource LightGray}"
                                               FontWeight="SemiBold"
                                               Margin="0 0 20 0"/>
                                    <TextBox Width="80"
                                             Text="{Binding Z, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             VerticalContentAlignment="Center"
                                             Foreground="White"
                                             FontSize="16"
                                             Background="{StaticResource CardLightGray}"
                                             BorderThickness="0"
                                             Padding="5 2"/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
