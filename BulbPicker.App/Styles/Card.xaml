<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardGray}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderGray}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Padding" Value="35 25"/>
    </Style>

    <Style x:Key="CardTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="CardSeparatorStyle" TargetType="Border">
        <Setter Property="Height" Value="1"/>
        <Setter Property="Background" Value="{StaticResource CardBorderGray}"/>
        <Setter Property="Margin" Value="-35 25 -35 10"/>
    </Style>

    <GridLength x:Key="CardGapWidth">60</GridLength>
    <GridLength x:Key="CardGapHeight">50</GridLength>
</ResourceDictionary>