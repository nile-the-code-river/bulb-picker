<UserControl x:Class="BulbPicker.App.Views.LogsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             mc:Ignorable="d" 
             d:DesignHeight="470" d:DesignWidth="600">
    <Border Style="{StaticResource CardStyle}" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <TextBlock Text="Logs"
                           Style="{StaticResource CardTitleStyle}"/>
                <Border Style="{StaticResource CardSeparatorStyle}"/>
            </StackPanel>
            
            <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible"
                     Grid.Row="1"
                     BorderThickness="0"
                     Background="Transparent"
                     FontSize="20"
                     Foreground="White">
                <ListBoxItem>Test 1</ListBoxItem>
                <ListBoxItem>Test 2</ListBoxItem>
                <ListBoxItem>Test 3</ListBoxItem>
                <ListBoxItem>Test 4</ListBoxItem>
                <ListBoxItem>Test 5</ListBoxItem>
                <ListBoxItem>Test 6</ListBoxItem>
            </ListBox>
        </Grid>
    </Border>
</UserControl>
