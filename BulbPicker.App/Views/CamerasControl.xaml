<UserControl x:Class="BulbPicker.App.Views.CamerasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             xmlns:vm="clr-namespace:BulbPicker.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:CamerasViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="1000" d:DesignWidth="600">
    <Border Style="{StaticResource CardStyle}">
        <StackPanel>
            <TextBlock Text="Cameras" Style="{StaticResource CardTitleStyle}"/>
            <Border Style="{StaticResource CardSeparatorStyle}"/>

            <!-- Loading -->
            <TextBlock Text="Is Loading"
                       Foreground="White"
                       Visibility="{Binding IsLoading}" />

            <!--Camera-->
            <ItemsControl ItemsSource="{Binding Cameras}" HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="250" Margin="0 0 5 0">
                            <DockPanel Style="{StaticResource CameraTitlePanelStyle}">
                                <TextBlock Text="{Binding IPAddress}" Style="{StaticResource CameraTitleStyle}" />
                                <Button Style="{StaticResource CameraConnectButtonStyle}"
                                        Command="{Binding TestCommand}"/>
                            </DockPanel>

                            <!--<Border Background="Black" Height="250">
                                <Image Source="{Binding ImageBefore}" Stretch="Uniform" Margin="10" />
                            </Border>-->

                            <Border Height="5"/>

                            <Border Background="Black" Height="250">
                                <Image Source="{Binding ImageAfter}" Stretch="Uniform" Margin="10" />
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            
            <!--Offsets-->
            <StackPanel HorizontalAlignment="Center">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="x offset"
                               Foreground="White"/>
                    <Button>◀</Button>
                    <Slider Width="100" />
                    <Button>▶</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="y offset"
                               Foreground="White" />
                    <Button>◀</Button>
                    <Slider Width="100" />
                    <Button>▶</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
