<UserControl x:Class="BulbPicker.App.Views.CompositeImagesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             xmlns:vm="clr-namespace:BulbPicker.App.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="470" d:DesignWidth="600">
    <UserControl.DataContext>
        <vm:CompositeImagesViewModel/>
    </UserControl.DataContext>
    
    <Border Style="{StaticResource CardStyle}" >
        <StackPanel>
            <TextBlock Text="Composite Images" Style="{StaticResource CardTitleStyle}"/>
            <Border Style="{StaticResource CardSeparatorStyle}"/>

            <UniformGrid Columns="2">
                <!--First Row-->
                <StackPanel Margin="15">
                    <TextBlock Text="First Row" />
                    <TextBlock Text="Camera 1 + 2" />
                    <Border Background="Black"
                            Width="250"
                            Height="250">
                        <Image Source="{Binding FirstRowImage}"
                               Stretch="Uniform"/>
                    </Border>
                </StackPanel>

                <!--Second Row-->
                <StackPanel Margin="15">
                    <TextBlock Text="Second Row" />
                    <TextBlock Text="Camera 3 + 4" />
                    <Border Background="Black"
                            Width="250"
                            Height="250">
                        <Image Source="{Binding FirstRowImage}"
                               Stretch="Uniform"/>
                    </Border>
                </StackPanel>
            </UniformGrid>
        </StackPanel>
    </Border>
</UserControl>
