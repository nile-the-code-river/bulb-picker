<UserControl x:Class="BulbPicker.App.Views.RobotArmsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             xmlns:vm="clr-namespace:BulbPicker.App.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="470" d:DesignWidth="600">
    <UserControl.DataContext>
        <vm:RobotArmsViewModel/>
    </UserControl.DataContext>
    
    <Border Style="{StaticResource CardStyle}" >
        <StackPanel>
            <TextBlock Text="Robot Arms" Style="{StaticResource CardTitleStyle}"/>
            <Border Style="{StaticResource CardSeparatorStyle}"/>

            <ItemsControl ItemsSource="{Binding RobotArms}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource CardBorderGray}"
                                Height="76px"
                                Margin="0 10 0 0"
                                CornerRadius="5">
                            <StackPanel 
                                    Orientation="Horizontal">
                                <Image />

                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="SCARA 1" />
                                        <TextBlock Text="{Binding IPAddress}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding State}" />
                                </StackPanel>

                                <Button>power</Button>

                                <Button>Run</Button>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>
