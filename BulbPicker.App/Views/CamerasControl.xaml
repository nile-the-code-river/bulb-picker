<UserControl x:Class="BulbPicker.App.Views.CamerasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             xmlns:ser="clr-namespace:BulbPicker.App.Services"
             xmlns:vm="clr-namespace:BulbPicker.App.ViewModels"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded"
             d:DesignHeight="940" d:DesignWidth="600">
    <UserControl.DataContext>
        <vm:CamerasViewModel />
    </UserControl.DataContext>

    <Border Style="{StaticResource CardStyle}">
        <StackPanel>
            <TextBlock Text="Cameras" Style="{StaticResource CardTitleStyle}"/>
            <Border Style="{StaticResource CardSeparatorStyle}"/>
            <!--<Button Background="DarkRed"
                    Foreground="White"
                    Command="{Binding RunDummyTestCommand}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Run(Test) Dummy Cameras" />
                    <TextBlock Text=" Running....."
                               Foreground="Red"
                               Visibility="{Binding IsTestingInProgress, Converter={StaticResource BoolToVisibility}}" />
                </StackPanel>
            </Button>-->
            
            <!--Camera-->
            <ItemsControl ItemsSource="{Binding Cameras}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="15">
                            <DockPanel>
                                <StackPanel>
                                    <TextBlock Text="{Binding Alias}"
                                               Style="{StaticResource MainTitleStyle}"/>
                                    <TextBlock Text="{Binding SerialNumber}"
                                               Style="{StaticResource SubTitleStyle}"/>
                                </StackPanel>
                                <Button Style="{StaticResource RunButtonStyle}"
                                        Command="{Binding RunCommand}"/>
                            </DockPanel>

                            <Border Background="{StaticResource BackgroundGray}"
                                    Height="250"
                                    Width="250">
                                <Image Source="{Binding ReceivedBitmapSource}"
                                       Stretch="Uniform"/>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--Async Loading Text-->
            <TextBlock Foreground="LightGray"
                       Margin="100"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       Text="Loading Cameras..."
                       Visibility="{Binding LoadingCameras, Converter={StaticResource BoolToVisibility}}"/>

            <!--Combined Image Index Count Display-->
            <!--<StackPanel Margin="100" >
                <TextBlock Foreground="White"
                           Text="Combined Image Count"
                           FontSize="32" />
                <TextBlock Foreground="White"
                           Text="{Binding Source={x:Static ser:TestIndexManager.Instance},
                                Path=CombinedImageIndex}"
                           FontSize="30"/>
            </StackPanel>-->
        </StackPanel>
    </Border>
</UserControl>
