<UserControl x:Class="BulbPicker.App.Views.CompositeImagesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             xmlns:vm="clr-namespace:BulbPicker.App.ViewModels"
             xmlns:ser="clr-namespace:BulbPicker.App.Services"
             mc:Ignorable="d" 
             d:DesignHeight="470" d:DesignWidth="600">
    <UserControl.DataContext>
        <vm:CompositeImagesViewModel/>
    </UserControl.DataContext>
    
    <Border Style="{StaticResource CardStyle}" >
        <StackPanel>
            <TextBlock Text="Composite Images (from Cameras)" Style="{StaticResource CardTitleStyle}"/>
            <Border Style="{StaticResource CardSeparatorStyle}"/>

            <UniformGrid Columns="2">
                <!--First Row-->
                <StackPanel Margin="15">
                    <TextBlock Text="First Row"
                               Style="{StaticResource MainTitleStyle}" />
                    <TextBlock Text="1st Inside + 1st Outside"
                               Style="{StaticResource SubTitleStyle}" />
                    <Border Background="{StaticResource BackgroundGray}"
                            Width="250"
                            Height="250">
                        <Image Source="{Binding Source={x:Static ser:CompositeImageService.Instance},
                                Path=FirstRowCompositeImageSource}"
                               Stretch="Uniform"/>
                    </Border>
                </StackPanel>

                <!--Second Row-->
                <StackPanel Margin="15">
                    <TextBlock Text="Second Row"
                               Style="{StaticResource MainTitleStyle}" />
                    <TextBlock Text="2nd Inside + 2nd Outside"
                               Style="{StaticResource SubTitleStyle}" />
                    <Border Background="{StaticResource BackgroundGray}"
                            Width="250"
                            Height="250">
                        <!--<Image Source="{Binding SecondRowImage}"
                               Stretch="Uniform"/>-->
                    </Border>
                </StackPanel>
            </UniformGrid>
        </StackPanel>
    </Border>
</UserControl>
