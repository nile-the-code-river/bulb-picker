<UserControl x:Class="BulbPicker.App.Views.CamerasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             xmlns:vm="clr-namespace:BulbPicker.App.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="600">

    <UserControl.DataContext>
        <vm:CamerasViewModel />
    </UserControl.DataContext>

    <Border Style="{StaticResource CardStyle}">
        <StackPanel>
            <TextBlock Text="Cameras" Style="{StaticResource CardTitleStyle}"/>
            <Border Style="{StaticResource CardSeparatorStyle}"/>

            <!--Camera-->
            <ItemsControl>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="250">
                            <DockPanel Style="{StaticResource CameraTitlePanelStyle}">
                                <TextBlock Text="{Binding Name}" Style="{StaticResource CameraTitleStyle}" />
                                <Button Command="{Binding ConnectCommand}" Style="{StaticResource CameraConnectButtonStyle}" />
                            </DockPanel>

                            <Border Background="Black" Height="250" Margin="0,5">
                                <Image Source="{Binding ImageBefore}" Stretch="Uniform" Margin="10" />
                            </Border>

                            <Border Height="3px"/>

                            <Border Background="Black" Height="250" Margin="0,5">
                                <Image Source="{Binding ImageAfter}" Stretch="Uniform" Margin="10" />
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <!--Cameras-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3px" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--1st Camera-->
                <StackPanel Grid.Column="0">
                    <DockPanel Style="{StaticResource CameraTitlePanelStyle}">
                        <TextBlock Text="Camera 1"
                                   Style="{StaticResource CameraTitleStyle}"/>
                        <Button Style="{StaticResource CameraConnectButtonStyle}" />
                    </DockPanel>

                    <!--TODO: stylize (2 imgs)-->
                    <Border Background="Black">
                        <Image Stretch="Uniform"
                               Margin="10"
                               Height="250" />
                    </Border>

                    <Border Height="3px"/>

                    <Border Background="Black">
                        <Image Stretch="Uniform"
                               Margin="10"
                               Height="250" />
                    </Border>
                </StackPanel>

                <!--2nd Camera-->
                <StackPanel Grid.Column="2">
                    <DockPanel Style="{StaticResource CameraTitlePanelStyle}">
                        <TextBlock Text="Camera 2"
                                   Style="{StaticResource CameraTitleStyle}"/>
                        <Button Style="{StaticResource CameraConnectButtonStyle}" />
                    </DockPanel>

                    <!--TODO: stylize (2 imgs)-->
                    <Border Background="Black">
                        <Image Stretch="Uniform"
                               Margin="10"
                               Height="250" />
                    </Border>
                    <Border Height="3px"/>

                    <Border Background="Black">
                        <Image Stretch="Uniform"
                               Margin="10"
                               Height="250" />
                    </Border>
                </StackPanel>
            </Grid>
            
            <!--Offsets-->
            <StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="x offset"
                               Foreground="White"/>
                    <Button>◀</Button>
                    <Slider Width="100" />
                    <Button>▶</Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="y offset"
                               Foreground="White" />
                    <Button>◀</Button>
                    <Slider Width="100" />
                    <Button>▶</Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
