<UserControl x:Class="BulbPicker.App.Views.CamerasControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BulbPicker.App.Views"
             xmlns:vm="clr-namespace:BulbPicker.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:CamerasViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="940" d:DesignWidth="600">
    <UserControl.DataContext>
        <vm:CamerasViewModel />
    </UserControl.DataContext>
    
    <Border Style="{StaticResource CardStyle}">
        <StackPanel>
            <TextBlock Text="Cameras" Style="{StaticResource CardTitleStyle}"/>
            <Border Style="{StaticResource CardSeparatorStyle}"/>

            <!--Camera-->
            <ItemsControl ItemsSource="{Binding Cameras}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="15">
                            <DockPanel>
                                <StackPanel>
                                    <TextBlock Text="{Binding Alias}"
                                               Style="{StaticResource MainTitleStyle}"/>
                                    <TextBlock Text="{Binding SerialNumber}"
                                               Style="{StaticResource SubTitleStyle}"/>
                                </StackPanel>
                                <Button Style="{StaticResource RunButtonStyle}"
                                        Command="{Binding TestCommand}"/>
                            </DockPanel>

                            <Border Background="Black"
                                    Height="250"
                                    Width="250">
                                <Image Source="{Binding OneShotImage}"
                                       Stretch="Uniform"/>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>
